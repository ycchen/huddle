<!DOCTYPE html>
<html>
<head>
  	<meta charset="utf-8">
  	<meta name="viewpoint" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Project Name" %></title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<link rel="shortcut icon" type="image/x-icon" href="/assets/octocat.ico" />
	<%= yield(:head) %>
</head>
<body>
	<!-- navigation -->
	<%= render :partial => 'shared/navigation' %>
	
	<!-- main container -->
	<div class="container">
		<!-- <div class="row"> -->
			<div class="flashes">
				<%= flashes_helper %>
			</div>
		<!-- </div> -->

		<%= content_tag :h1, yield(:title) if show_title? %>

		<div class="content">
			<div class="row">
				<div class="span12">
					<div class="main-image">
						<img src='/assets/welcome.jpg' />
					</div>
					<%= yield %>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
